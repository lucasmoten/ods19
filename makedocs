#!/bin/bash

cd `dirname $0`

#Use humangeo's aglio container and copy artifact to where it needs to be
docker run --rm -ti -v `pwd`:/docs humangeo/aglio -i docs/home.md --theme-variables streak -o root.html
mv -f root.html server/static/templates/root.html

docker run --rm -ti -v `pwd`:/docs humangeo/aglio -i changelog.md --theme-variables streak -o changelog.html
mv -f changelog.html server/static/templates/changelog.html