#!/bin/bash

cd `dirname $0`
odriverpmbuilt=`docker images | grep odriverpm | wc -l`

if [ "$odriverpmbuilt" == "       1" ]
then
  echo docker image already built
else
  docker build -t deciphernow/odriverpm:latest scripts
fi

docker run -i -e ODRIVE_PACKAGE_NAME="odrive-$1" -e ODRIVE_VERSION=$1 -v `pwd`:/go/src/decipher.com/object-drive-server deciphernow/odriverpm:latest scripts/build.sh
